<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iDoWhite"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOTIFICATION"
        android:gravity="left"/>
    
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Low Threshold Notification"
        	android:gravity="left"/>
        
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text=""
        	android:gravity="center"/>
        
        <ToggleButton
        	android:id="@+id/toggle_button_low"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="LOW"
        	android:gravity="right"/>
    </LinearLayout>  

    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="High Threshold Notification"
        	android:gravity="left"/>
        
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text=""
        	android:gravity="center"/>
        
        <ToggleButton
        	android:id="@+id/toggle_button_high"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="HIGH"
        	android:gravity="right"/>
    </LinearLayout>     
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEMPERATURE"
        android:gravity="left"/>
    
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Low Threshold "
        	android:gravity="left"/>
        
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text=""
        	android:gravity="center"/>
        
        <SeekBar
        	android:id="@+id/seek_bar_low"
        	android:layout_height="wrap_content"
        	android:layout_width="100dip"/>
        
    </LinearLayout>
    
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="High Threshold "
        	android:gravity="left"/>
        
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text=""
        	android:gravity="center"/>
        
        <SeekBar
        	android:id="@+id/seek_bar_high"
        	android:layout_width="100dip"
        	android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Temperature Unit "
        	android:gravity="left"/>
        
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text=""
        	android:gravity="center"/>
        
        <Spinner
    		android:id="@+id/unit_spinner"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" />
        
    </LinearLayout>    
    
</LinearLayout>
